<body>
  <h1>Create New Collage </h1>
  <%= form_for @coll ,:html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label 'Collage Name' %>
    <%= f.text_field :name , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label 'Address' %>
    <%= f.text_area :address,class: "form-control" %>
    <br /> <br />
  </div>
  <div class="form-group">
    <%= f.label 'Photos' %>
    <%= f.file_field_tag "avatar[]", :multiple =>:true ,class: "form-control" %>
  <br>
    <%= f.submit 'Save' %>
  <% end %>
  </div>
  <b><%= link_to "< < | Back |", root_path %></b>
  <%= link_to "| View |",  collages_path %>
</body>
<style>
body {
   background-image: url("paper.gif");
   background-color: #cccccc;
}
</style>

