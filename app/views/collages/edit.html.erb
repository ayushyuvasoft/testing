<body>
  <h1>You can Edit here</h1>
  <%= form_for @coll,:html => { :multipart => true } do |f| %>
   <div class="form-group">
    <%= f.label 'Collage Name' %>
    <%= f.text_field :name ,class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label 'Address' %>
    <%= f.text_area :address ,class: "form-control"%>
    </div>
    <%= f.label 'Photos' %>
    <%= f.file_field_tag "avatar[]",type: :file, multiple: :true  %>
    <br>
    <%= f.submit 'Save' %>
    <% end %>
  <%= link_to "Back", root_path %>
  <%= link_to "View",  collages_path %>
</body>

<style>
body {
   background-image: url("paper.gif");
   background-color: #cccccc;
}
</style>